import random

answer = random.randint(1,3)

print("Please guess a number between 1 and 3: ")

guess = int(input())

if guess == answer:
    rightAnswer = f"Congrats! You got the right answer of {answer}! :D"
    print(rightAnswer)
else:
    wrongAnswer = f"Uh-Oh! You lost :( The answer was {answer}."
    print(wrongAnswer)
